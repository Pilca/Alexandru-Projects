const library = {
  books: [
     { title: '1984', author: 'George Orwell', isRead: false },
      { title: 'The Great Gatsby', author: 'F. Scott Fitzgerald', isRead: false }
  ],

  listBooks: function() {
      this.books.forEach(book => {
          console.log(book.title);
      });
  },
  

  markAsRead: function(title) {
      const book = this.books.find(book => book.title === title);
      if (book) {
          book.isRead = true;
      } else {
          console.log('Book not found');
      }
  }
};


console.log('Books in library:');
library.listBooks();

console.log('Marking "1984" as read.');
library.markAsRead('1984');

console.log('Books in library after updating:');
library.listBooks();


